<div style="margin-top: 15px;">
  <div class="consultation-card card-container-edit consultation-index-responsive">
    <div class="d-flex justify-content-between">
    <h2>New follow-up (<%= @consultation.start_time.strftime("%A, %b %d") %>)</h2><h2 style="padding-right: 60px;"></h2>
    </div>
    <%= simple_form_for [@patient, @consultation] do |f| %>
      <div class="consultation-taggs w-25">
        <%= f.input :tags, collection: ActsAsTaggableOn::Tag.all, input_html: {class: "js-example-tags", multiple: true } %>
       <!-- <span><%#= render 'shared/form_tagg_new' %><span> -->
        <ul>
          <% @consultation.tag_list.each do |tag| %>
            <li class="badge badge-secondary"><%= tag %></li>
          <% end %>
        </ul>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newTaggModal">+ New tagg</button>
      </div>

      <div class='d-flex align-items-center' style="width: 95%; margin-bottom: 20px;">
        <%= f.input :patient_complain, placeholder: 'Add notes for the complains', wrapper_html: { class: 'input-card' }, input_html: {style: 'height:16vh;'} %>
        <ul>
          <li class='list-inline'><i class="fas fa-paperclip"></i></li>
        </ul>
      </div>
      <div class='d-flex align-items-center' style="width: 95%; margin-bottom: 20px;">
        <%= f.input :diagnostic, placeholder: 'Add notes for the diagnostic', wrapper_html: { class: 'input-card' }, input_html: {style: 'height:16vh;'} %>
        <ul>
          <li class='list-inline'><i class="fas fa-paperclip"></i></li>
        </ul>
      </div>
      <div class='d-flex align-items-center' style="width: 95%; margin-bottom: 20px;">
        <%= f.input :care_plan, placeholder: 'Add notes for the care plan', wrapper_html: { class: 'input-card' }, input_html: {style: 'height:16vh;'} %>
        <ul>
          <li class='list-inline'><i class="fas fa-paperclip"></i></li>
        </ul>
      </div>
      <div class='d-flex align-items-center' style="width: 95%">
        <%= f.input :prescription, placeholder: 'Add prescription for the patient', wrapper_html: { class: 'input-card' }, input_html: {style: 'height:16vh;'} %>
        <ul>
          <li class='list-inline'><i class="fas fa-paperclip"></i></li>
        </ul>
      </div>
      <div class='d-flex align-items-center' style="width: 95%">
        <%= f.input :note_patient, placeholder: 'Add notes for the patient', wrapper_html: { class: 'input-card' }, input_html: {style: 'height:10vh;'} %>
        <ul>
          <li class='list-inline'><i style="margin-top: 2rem;" class="fas fa-link"></i></li>
          <li class='list-inline'><i class="fas fa-paperclip"></i></li>
        </ul>
      </div>
      <div class="d-flex justify-content-end"> <%= f.button :submit, class:"btn btn-flat-add-consultation",data: { disable_with: false }, value:"Next" %> </div>
    <% end %>

<span><%= render 'shared/form_tagg_new' %><span>

  </div>
</div>
