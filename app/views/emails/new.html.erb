<div class="consultation-container d-flex">
  <div class='card-left'>
  </div>

  <div class="consultation-card card-container">
    <p>
      <h2>New follow-up email</h2>
      <%= link_to "Open template", dashboard_path, class:"open-template-button"%>
    </p>
    <div class="d-flex" style="width: 100%">
      <div class="consultation-form" style="width: 100%">
        <%= simple_form_for [@consultation, @email] do |f| %>
        <div style="width: 100%">
          <%= f.input :subject, placeholder: 'Add a subject for recipients', wrapper_html: { class: 'input-card' } %>
        </div>
        <div style="width: 100%">
          <%= f.input :title, placeholder: 'Add a title for your email', wrapper_html: { class: 'input-card' } %>
        </div>
        <div class="d-flex align-items-center" style="width: 100%">
          <%= f.input :content, placeholder: 'Add notes for the care plan', wrapper_html: { class: 'input-card' }, input_html: {value: "#{@consultation.prescription}"} %>
        </div>
        <%= f.button :submit %>
        <% end %>
      </div>

    </div>

  </div>

  <div class='card-right'></div>
</div>
