<div class="mail_contener">
  <h2>New follow-up email</h2>
  <%= link_to "Open template", dashboard_path, class:"open-template-button"%>
  <%= simple_form_for [@consultation, @email] do |f| %>
  <div><%= f.input :subject, placeholder: 'Add a subject for recipients', wrapper_html: { class: 'input-card' } %></div>
  <div><%= f.input :title, placeholder: 'Add a title for your email', wrapper_html: { class: 'input-card' } %></div>
  <div class="d-flex align-items-center"><%= f.input :content, placeholder: 'Add notes for the care plan', wrapper_html: { class: 'input-card' }, input_html: {value: "#{@consultation.prescription}"} %></div>
  <div class="d-flex justify-content-end"> <%= f.button :submit, class:"btn-flat-add-patient" %> </div>
    <% end %>
</div>





