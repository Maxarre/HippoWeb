<div style="margin-top: 15px;">
  <div class="back-to-dashboard" style="max-width: 235px;">
    <%= link_to dashboard_path, class:"erase d-flex" do %>
      <i class="fas fa-chevron-left" id="down"></i>
      <p>Back to dashboard</p>
    <% end  %>
  </div>

  <div class="d-flex justify-content-around">
    <div class="card_free patient_description">
      <div class="patient_general_info">
        <h2><%= @patient.first_name  %> <%= @patient.last_name  %></h2>
        <h5 style="margin-bottom: 15px; font-size: 20px;"><%= @patient.date_of_birth  %></h5>
        <div class="mail_link"><a href=""><i class="far fa-envelope"></i></a></div>
        <h4 class="patient-category">Patient Category</h4>
      </div>
      <div class="patient_detailed_info">
        <header>First Name</header>
        <p><%= @patient.first_name  %></p>
        <header>Last Name</header>
        <p><%= @patient.last_name  %></p>
        <header>Gender</header>
        <p><%= @patient.gender  %></p>
        <header>Address</header>
        <div class="patient_address">
        <p><%= @patient.address  %></p>
        <p><%= @patient.city  %></p>
        <p><%= @patient.zipcode  %></p>
        </div>
        <header>Email</header>
        <p><%= @patient.email  %></p>
        <header>Phone</header>
        <p><%= @patient.phone  %></p>
      </div>
    </div>
    <div class="patient_index">
      <div class=sticky>
        <div class="tabs card_free">
          <div class="d-flex justify-content-around">
            <div class="tab d-flex"><i class="fas fa-bars" id="down"></i><p><%= link_to 'Follow-up', patient_path(@patient)%></p></div>
            <div class="tab d-flex"><i class="far fa-clipboard" id="down"></i><p>Medical Record</p></div>
            <div class="tab d-flex"><i class="fas fa-pills" id="down"></i><p>Treatment</p></div>
            <div class="tab d-flex"><i class="far fa-envelope" id="down"></i><p>Email History</p></div>
          </div>
          <div class="d-flex">
            <div class="empty"></div>
            <div class="empty"></div>
            <div class="empty"></div>
            <div class="full"></div>
          </div>
        </div>
        <div class="dashboard_index">
          <div class="d-flex justify-content-between">
            <h5>Filter: <a href=""> All</a></h5>
            <%#= link_to "New email", new_consultation_email_path(@consultation), class:"follow-up" %>
          </div>
        </div>
         <div class="email-index">
          <% @patient.emails.each do |email| %>
            <div class="email-card link">
              <h3>Email title: <%= email.title %></h3>
              <p>Sent date: <%= email.consultation.end_time %></p>
              <ul><li class='list-inline'><%= email.consultation.patient.first_name%> <%= email.consultation.patient.last_name  %></li></ul>
              <span></span>
              <%#= link_to '', patient_path %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
