      </div>
        <% input_value = @consultation.tag_list.empty? ? "" : @consultation_templates["insomnia"][0]%>
        <%= f.input :patient_complain, placeholder: 'Add notes for the complains', input_html: { class: 'input-card', style: 'height:16vh;', value: input_value}, label: false %>
        <% input_value = @consultation.tag_list.empty? ? "" : @consultation_templates["insomnia"][1]%>
