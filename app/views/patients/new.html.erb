<div style="margin-top: 15px;">
  <div class="back-to-dashboard" style="max-width: 235px;">
    <%= link_to dashboard_path, class:"erase d-flex" do %>
      <i class="fas fa-chevron-left" id="down"></i>
      <p>Back to dashboard</p>
    <% end  %>
  </div>

  <div class="d-flex justify-content-around">
    <div class="card_free" style="height: 380px;">
      <div id="selected_category" class="creation_category border-bottom">
        <h5>Patient Information</h5>
        <p>General information about the patient</p>
      </div>

      <div class="creation_category border-bottom">
      <h5>Medical Record</h5>
        <p>Medical report of the patient situation</p>
      </div>
      <div class="creation_category border-bottom">
        <h5>Treatment</h5>
        <p>A detail list of the treatment data</p>
      </div>
      <div class="creation_category">
        <h5>Insurance</h5>
        <p>All insurance information of the patient</p>
      </div>
    </div>

    <%= simple_form_for @patient do |f| %>
      <div class="card general-padding-20">
        <h3>Patient Information</h3>
        <div class="d-flex justify-content-between">
          <div style="width: 45%">
            <%= f.input :first_name%>
            <%= f.input :date_of_birth, :start_year => 1900, :use_month_numbers => true, :order => [:day, :month, :year], input_html: { class: 'bigger-date'} %>
          </div>
          <div style="width: 45%" >
            <%= f.input :gender, collection: ["Male", "Female"] %>
            <%= f.input :last_name%>
          </div>
        </div>
        <div class="d-flex justify-content-between">
          <div style="width:30%;"><%= f.input :address, input_html: { class: 'form_width'} %></div>
          <div style="width:30%;"><%= f.input :city, input_html: { class: 'form_width'} %></div>
          <div style="width:30%;"><%= f.input :zipcode, input_html: { class: 'form_width'} %></div>
        </div>
        <div class="d-flex justify-content-between">
          <div style="width:30%;"><%= f.input :job_title, input_html: { class: 'form_width'} %></div>
          <div style="width:30%;"><%= f.input :email, input_html: { class: 'form_width'} %></div>
          <div style="width:30%;"><%= f.input :phone, input_html: { class: 'form_width'} %></div>
        </div>
        <div class="d-flex justify-content-end">
          <%= link_to "SKIP", medicalrecord_path, class: "btn btn-outline-secondary margin-right-50" %>
          <%= f.button :submit, "NEXT", class: "btn btn-primary margin-right-50" %>
        </div>
      </div>
    <% end %>

  </div>

</div>
