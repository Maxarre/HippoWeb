<div class="d-flex justify-content-between interface-position">
  <h5>Filter: <a href=""> All</a></h5>
  <div>
    <%= link_to "+ Add Patient", new_patient_path, class: "btn btn-flat-add-patient" %>
    <%= link_to "+ Add Meeting", new_consultation_path, class: "btn btn-flat-add-meeting button-position" %>
  </div>
</div>

<div class="container-index">
  <div class="card_free" style="width: 77vw">
    <div class="title d-flex border-bottom">
      <div class="category-index border-right" style="width: 15vw">
        <h5>Name</h5>
      </div>
      <div class="category-index border-right" style="width: 15vw">
        <h5>Email</h5>
      </div>
      <div class="category-index border-right" style="width: 11vw">
        <h5>Category</h5>
      </div>
      <div class="category-index border-right" style="width: 11vw">
        <h5>Type</h5>
      </div>
      <div class="category-index border-right" style="width: 11vw">
        <h5>Next/last meeting</h5>
      </div>
      <div class="category-index" style="width: 14vw ">
        <h5>Comment</h5>
      </div>
    </div>
    <% @patient.each do |patient| %>
      <div class="content d-flex border-bottom" style="padding-left: 10px;">
        <div class="d-flex category-index" style="width: 15vw">
          <p><%= "#{patient.first_name} #{patient.last_name}" %></p>
        </div>
        <div class="d-flex category-index" style="width: 15vw">
          <p><%= patient.email %></p>
        </div>
        <div class="d-flex category-index" style="width: 15vw">
          <p><%= patient.gender %></p>
        </div>
        <div class="d-flex category-index" style="width: 15vw">
          <p><%= @consultations.find_by(patient_id: patient.id).consultation_type %></p>
        </div>
        <div class="d-flex category-index" style="width: 15vw">
          <p><%= patient.job_title %></p>
        </div>
        <div class="d-flex category-index" style="width: 15vw">
          <p><%= @consultations.find_by(patient_id: patient.id).patient_note_attachment %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

